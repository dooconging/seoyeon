<script>
// Reveal on scroll
(function(){
  const els=document.querySelectorAll('.reveal');
  const io=new IntersectionObserver((entries)=>{
    entries.forEach((e)=>{
      if(e.isIntersecting){
        e.target.style.animationDelay=(Array.from(els).indexOf(e.target)*100)+'ms';
        e.target.classList.add('show');
        io.unobserve(e.target);
      }
    });
  },{threshold:0.15});
  els.forEach(el=>io.observe(el));
})();

// Floating contact menu toggle
(function(){
  const fab=document.getElementById('fab');
  const btn=fab.querySelector('.fab-btn');
  btn.addEventListener('click',()=>fab.classList.toggle('open'));
  document.addEventListener('click',(e)=>{ if(!fab.contains(e.target)) fab.classList.remove('open'); });
})();

